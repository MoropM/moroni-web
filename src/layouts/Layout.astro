---
// Supports weights 100-900
import '@fontsource-variable/onest';
import { ClientRouter } from 'astro:transitions';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;

const description = '"Desarrollando, creando e inhovando. Desarrollador de software con más de 5 años de experiencia.';
const imageAuthor = "https://avatars.githubusercontent.com/u/31376461?v=4";
const uriDomain = "https://moroniperezm.com/";
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico">
		<meta name="description" content={description} />
		<title>{title}</title>

		<meta name="twitter:card" content={description}>
		<meta name="twitter:site" content={uriDomain}>
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:creator" content="@Moroni_pM">
		<meta name="twitter:image" content={imageAuthor}>

		<meta property="og:title" content={title}>
		<meta property="og:type" content="website">
		<meta property="og:url" content={uriDomain}>
		<meta property="og:image" content={imageAuthor}>
		<meta property="og:description" content={description}>
		<meta property="og:site_name" content={uriDomain}>
		<ClientRouter />
	</head>
	<body>
		<slot />
		<Footer />
		<!-- <div class="absolute top-0 z-[-2] h-full w-full bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]"></div> -->
		<div class="backdrop_content absolute inset-0 -z-10 h-full w-full bg-black bg-[linear-gradient(to_right,#2a2a2ab3_1px,transparent_1px),linear-gradient(to_bottom,#2a2a2ab3_1px,transparent_1px)] bg-[size:14px_24px]"></div>
	
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
		--color-m: #058ce6f5;
		--color_wText: #fff9;
		--color_lText: #454545;
		--color-yellow: rgb(254 240 138 / var(--tw-text-opacity, 1));
		--color-yellow_dark: #ac9601;
		--header_height: 70px;
		--bg_linedark: #2a2a2ab3;
		--bg_linelight: #7373730a;
		--bg_line: light-dark(var(--bg_linelight), var(--bg_linedark));
	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		font-family: 'Onest Variable', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		scroll-behavior: smooth;
	}
	body {
		width: 100%;
		top: 0px;
		position: absolute;
		height: 100dvh;
		&:has(.header) {
			height: auto;
		}
	}
	main {
		position: relative;
		width: 100%;
		
		margin: 0 auto;
		height: auto;
		&:has(.header) {
			min-height: calc(100vh - 180px);
			min-height: calc(100dvh - 180px);
		}
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		padding: 1.3rem;
	}
	.emphasis_text {
		color: var(--color-m);
		&:hover {
			color: light-dark(var(--color-yellow_dark), var(--color-yellow));
		}
		transition: color 0.3s ease;
	}

	.backdrop_content {
		background-color: light-dark(white, black);
		background-image: linear-gradient(to right,var(--bg_line) 1px,transparent 1px),linear-gradient(to bottom,var(--bg_line) 1px,transparent 1px);
		
	}
	@media (prefers-reduced-motion: reduce) {
		body {
			scroll-behavior: auto;
		}
	}
</style>
