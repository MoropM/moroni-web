---
interface Props {
    class?: string;
}
const { class: className } = Astro.props;

// sticky top-0 z-10
---
<section class={`w-full p-4 flex justify-center ${className} items-center h-[90px]  `}>
    <slot />

    <picture class="logo--content" transition:name="logo_m">
        <source media="(prefers-color-scheme: dark)" srcset="/logo/M_dark.webp">
        <img src="/logo/M_light.webp" 
            alt="Logo Moro." 
            loading="lazy" 
            width=60" 
            class="opacity-50"
            >
    </picture>
</section>

<style>
    .header {
        font-weight: bold;
        color: light-dark(black, white);
        
        text-transform: uppercase;
        background-color: transparent;
        position: fixed;
        top: 0;
        z-index: 10;
        animation: enhance-header linear both;
        animation-timeline: scroll();
        animation-range: 0 300px ; 
        width: 100%;
    }
    .header {
        a:hover {
            color: var(--color-yellow);
        }
    }
    .logo--content {
        img {
            border-radius: 50%;
        }
        
    }

    @keyframes enhance-header {
        0% {
            background-color: transparent;
            backdrop-filter: blur(0px);
        }
        100% {
            background-color: light-dark(rgb(255 255 255 / 0.5), rgb(0 0 0 / 0.5));
            backdrop-filter: blur(5px);
            color: var(--color-m);
            box-shadow: 0 4px 3px rgba(0, 0, 0, 0.1);
        }
    }
</style>
