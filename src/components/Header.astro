---
interface Props {
    class?: string;
}
const { class: className } = Astro.props;

// sticky top-0 z-10
---
<section class={`w-full p-4 flex justify-center ${className} items-center h-[90px]  `}>
    <slot />

    <picture class="logo--content" transition:name="logo_m">
        <source media="(prefers-color-scheme: dark)" srcset="/logo/M_dark.webp">
        <img src="/logo/M_light.webp" 
            alt="Logo Moro." 
            loading="lazy" 
            width=60" 
            class="opacity-50"
            >
    </picture>
</section>

<style>
    .header {
        background-color: transparent;
        position: fixed;
        top: 0;
        z-index: 10;
        animation: enhance-header linear both;
        animation-timeline: scroll();
        animation-range: 0 200px ; 
        width: 100%;

    }
    .logo--content {
        img {
            border-radius: 50%;
        }
        
    }

    @keyframes enhance-header {
        0% {
            background-color: transparent;
            backdrop-filter: blur(0px);
        }
        100% {
            background-color: rgb(0 0 0 / 0.2);
            /* background-color: rgba(49, 49, 49, 0.456); */
            backdrop-filter: blur(5px);
        }
    }
</style>
